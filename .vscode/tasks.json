{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-Cqrs.Demo",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Tutorials/Cqrs/Src/Cqrs.Demo/Cqrs.Demo.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish-Cqrs.Demo",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/Tutorials/Cqrs/Src/Cqrs.Demo/Cqrs.Demo.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch-Cqrs.Demo",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/Tutorials/Cqrs/Src/Cqrs.Demo/Cqrs.Demo.csproj"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
