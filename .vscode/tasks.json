{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-SourceGenerator.Demo",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/Tutorials/SourceGenerator/Src/SourceGenerator.Demo/SourceGenerator.Demo.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish-SourceGenerator.Demo",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/Tutorials/SourceGenerator/Src/SourceGenerator.Demo/SourceGenerator.Demo.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch-SourceGenerator.Demo",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/Tutorials/SourceGenerator/Src/SourceGenerator.Demo/SourceGenerator.Demo.csproj"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}
